<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.App" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
    </style>

    <style name="AssetControlTheme" parent="Base.Theme.App">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/assetControl</item>
        <item name="colorPrimaryVariant">@color/assetControlDark</item>
        <item name="colorOnPrimary">@color/text_dark</item>
        <item name="colorSecondary">@color/triad3</item>
        <item name="colorSecondaryVariant">@color/triad2</item>
        <item name="colorOnSecondary">@color/text_dark</item>
        <!--To change the tint of checkboxes in options menu items</item>-->
        <item name="android:textColorSecondary">@color/triad4</item>
        <item name="android:statusBarColor">@color/triad1</item>
        <item name="android:navigationBarColor">@color/assetControlDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <!--To change the text styling of options menu items</item>-->
        <item name="android:itemTextAppearance">@style/MyActionMenuStyle</item>
        <!--To change the background of options menu-->
        <item name="android:itemBackground">@color/assetControlDark</item>
    </style>

    <style name="MyActionMenuStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>

        <item name="background">@color/triad1</item>
        <item name="android:background">@color/triad1</item>

        <item name="navigationIcon">@drawable/ic_arrow_back</item>
        <item name="android:navigationIcon">@drawable/ic_arrow_back</item>

    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <!-- ActionBar tabs text styles -->
    <style name="MyActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/AssetControlTheme</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_animated</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/assetControl</item>
        <item name="windowSplashScreenBackground">@color/assetControlDark</item>
        <item name="windowSplashScreenAnimationDuration">3000</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/colorSemitransparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
        <!-- <item name="android:windowIsFloating">true</item> -->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="colorPrimary">@color/assetControl</item>
        <item name="colorPrimaryVariant">@color/assetControlDark</item>
        <item name="colorOnPrimary">@color/text_dark</item>
        <item name="colorSecondary">@color/triad3</item>
        <item name="colorSecondaryVariant">@color/triad2</item>
        <item name="colorOnSecondary">@color/text_dark</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

</resources>