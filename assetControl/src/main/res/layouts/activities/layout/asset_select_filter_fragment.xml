<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:id="@+id/codeTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:dropDownHeight="200dp"
            android:ellipsize="end"
            android:freezesText="true"
            android:hint="@string/search_by_code_description_ean"
            android:lines="1"
            android:maxLines="1"
            android:paddingStart="4dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="4dp"
            android:text=""
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/itemCategoryTextView"
            app:layout_constraintEnd_toStartOf="@+id/codeClearImageView"
            app:layout_constraintStart_toEndOf="@+id/codeSearchImageView"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/codeSearchImageView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:alpha="0.5"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/codeTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/codeTextView"
            app:srcCompat="@drawable/ic_search_black"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/codeClearImageView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="2dp"
            android:alpha="0.5"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/codeTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/codeTextView"
            app:srcCompat="@drawable/ic_close_black"/>

    <TextView
            android:id="@+id/itemCategoryTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:dropDownHeight="200dp"
            android:ellipsize="end"
            android:freezesText="true"
            android:hint="@string/search_by_category"
            android:lines="1"
            android:maxLines="1"
            android:paddingStart="4dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="4dp"
            android:text=""
            app:layout_constraintBottom_toTopOf="@+id/warehouseAreaTextView"
            app:layout_constraintEnd_toStartOf="@+id/categoryClearImageView"
            app:layout_constraintStart_toEndOf="@+id/categorySearchImageView"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/categorySearchImageView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:alpha="0.5"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/itemCategoryTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/itemCategoryTextView"
            app:srcCompat="@drawable/ic_search_black"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/categoryClearImageView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="2dp"
            android:alpha="0.5"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/itemCategoryTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/itemCategoryTextView"
            app:srcCompat="@drawable/ic_close_black"/>

    <TextView
            android:id="@+id/warehouseAreaTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:dropDownHeight="200dp"
            android:ellipsize="end"
            android:freezesText="true"
            android:hint="@string/search_by_area"
            android:lines="1"
            android:maxLines="1"
            android:paddingStart="4dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="4dp"
            android:text=""
            app:layout_constraintBottom_toTopOf="@+id/onlyActiveLayout"
            app:layout_constraintEnd_toStartOf="@+id/warehouseAreaClearImageView"
            app:layout_constraintStart_toEndOf="@+id/warehouseAreaSearchImageView"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/warehouseAreaClearImageView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="2dp"
            android:alpha="0.5"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/warehouseAreaTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/warehouseAreaTextView"
            app:srcCompat="@drawable/ic_close_black"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/warehouseAreaSearchImageView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:alpha="0.5"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/warehouseAreaTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/warehouseAreaTextView"
            app:srcCompat="@drawable/ic_search_black"/>

    <LinearLayout
            android:id="@+id/onlyActiveLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="1dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/onlyActiveSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/only_active"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>