<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/crud"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.activities.common.CRUDActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/top_appbar"
        style="@style/MyActionBar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/register_modification" />

    <Button
        android:id="@+id/assetCRUDButton"
        style="?android:textAppearanceSmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/rounded_corner_button_395b50"
        android:clickable="true"
        android:drawableStart="@drawable/ic_asset"
        android:drawablePadding="15dp"
        android:drawableTint="@color/whitesmoke"
        android:elevation="1dp"
        android:focusable="true"
        android:gravity="center"
        android:paddingStart="50dp"
        android:paddingTop="25dp"
        android:paddingEnd="50dp"
        android:paddingBottom="25dp"
        android:stateListAnimator="@null"
        android:text="@string/add_modify_asset"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_appbar" />

    <Button
        android:id="@+id/warehouseAreaCRUDButton"
        style="?android:textAppearanceSmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/rounded_corner_button_ff8a5b"
        android:clickable="true"
        android:drawableStart="@drawable/ic_area"
        android:drawablePadding="15dp"
        android:drawableTint="@color/whitesmoke"
        android:elevation="1dp"
        android:focusable="true"
        android:gravity="center"
        android:paddingStart="50dp"
        android:paddingTop="25dp"
        android:paddingEnd="50dp"
        android:paddingBottom="25dp"
        android:stateListAnimator="@null"
        android:text="@string/add_modify_area"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/assetCRUDButton" />

    <Button
        android:id="@+id/warehouseCRUDButton"
        style="?android:textAppearanceSmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/rounded_corner_button_ffed65"
        android:clickable="true"
        android:drawableStart="@drawable/ic_warehouse"
        android:drawablePadding="15dp"
        android:drawableTint="@color/whitesmoke"
        android:elevation="1dp"
        android:focusable="true"
        android:gravity="center"
        android:paddingStart="50dp"
        android:paddingTop="25dp"
        android:paddingEnd="50dp"
        android:paddingBottom="25dp"
        android:stateListAnimator="@null"
        android:text="@string/add_modify_warehouse"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/warehouseAreaCRUDButton" />

    <Button
        android:id="@+id/itemCategoryCRUDButton"
        style="?android:textAppearanceSmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/rounded_corner_button_6b2737"
        android:clickable="true"
        android:drawableStart="@drawable/ic_category"
        android:drawablePadding="15dp"
        android:drawableTint="@color/whitesmoke"
        android:elevation="1dp"
        android:focusable="true"
        android:gravity="center"
        android:paddingStart="50dp"
        android:paddingTop="25dp"
        android:paddingEnd="50dp"
        android:paddingBottom="25dp"
        android:stateListAnimator="@null"
        android:text="@string/add_modify_category"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/warehouseCRUDButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
