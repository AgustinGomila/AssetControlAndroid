<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/print_label"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.dacosys.assetControl.ui.activities.print.PrintLabelActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/assetButton"
        style="?android:textAppearanceSmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/rounded_corner_button_395b50"
        android:clickable="true"
        android:drawableStart="@drawable/ic_asset"
        android:drawablePadding="15dp"
        android:drawableTint="@color/whitesmoke"
        android:elevation="1dp"
        android:focusable="true"
        android:gravity="center"
        android:paddingStart="50dp"
        android:paddingTop="25dp"
        android:paddingEnd="50dp"
        android:paddingBottom="25dp"
        android:stateListAnimator="@null"
        android:text="@string/print_asset_labels"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/warehouseAreaButton"
        style="?android:textAppearanceSmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/rounded_corner_button_ff8a5b"
        android:clickable="true"
        android:drawableStart="@drawable/ic_area"
        android:drawablePadding="15dp"
        android:drawableTint="@color/whitesmoke"
        android:elevation="1dp"
        android:focusable="true"
        android:gravity="center"
        android:paddingStart="50dp"
        android:paddingTop="25dp"
        android:paddingEnd="50dp"
        android:paddingBottom="25dp"
        android:stateListAnimator="@null"
        android:text="@string/print_area_labels"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/assetButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
