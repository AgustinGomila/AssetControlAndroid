<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/location_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="8sp"
    android:layout_marginTop="8sp"
    android:layout_marginEnd="8sp"
    android:layout_marginBottom="8sp"
    android:clickable="true"
    android:excludeFromRecents="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.activities.location.LocationSelectActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gralLayout"
        android:layout_width="480dp"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_background_dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/panelTop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/buttonPanel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/clearImageViewWa"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="2dp"
                android:alpha="0.5"
                android:scaleType="fitCenter"
                android:tint="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/warehouseArea"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/warehouseArea"
                app:srcCompat="@drawable/ic_close_black" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/clearImageViewW"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="2dp"
                android:alpha="0.5"
                android:scaleType="fitCenter"
                android:tint="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/warehouse"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/warehouse"
                app:srcCompat="@drawable/ic_close_black" />

            <com.dacosys.assetControl.ui.common.views.custom.ContractsAutoCompleteTextView
                android:id="@+id/warehouseArea"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:cursorVisible="true"
                android:dropDownHeight="wrap_content"
                android:dropDownSelector="@drawable/rounded_corner_layout"
                android:elegantTextHeight="true"
                android:hint="@string/warehouse_area"
                android:imeOptions="actionDone|flagNoExtractUi"
                android:inputType="textAutoCorrect|textCapSentences|textAutoComplete"
                android:maxLines="2"
                android:minLines="1"
                android:text=""
                android:textColor="@color/text_dark"
                android:textColorHint="@color/colorHint"
                app:autoSizeMaxTextSize="18sp"
                app:autoSizeMinTextSize="12dp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toStartOf="@+id/clearImageViewWa"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/warehouseProgressBar"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <ProgressBar
                android:id="@+id/warehouseAreaProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:indeterminate="true"
                android:indeterminateTint="@color/firebrick"
                android:progressTint="@color/assetControl"
                app:layout_constraintBottom_toBottomOf="@+id/warehouseArea"
                app:layout_constraintEnd_toEndOf="@+id/warehouseArea"
                app:layout_constraintStart_toStartOf="@+id/warehouseArea" />

            <com.dacosys.assetControl.ui.common.views.custom.ContractsAutoCompleteTextView
                android:id="@+id/warehouse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:cursorVisible="true"
                android:dropDownHeight="wrap_content"
                android:dropDownSelector="@drawable/rounded_corner_layout"
                android:elegantTextHeight="true"
                android:hint="@string/warehouse"
                android:imeOptions="actionDone|flagNoExtractUi"
                android:inputType="textAutoCorrect|textCapSentences|textAutoComplete"
                android:maxLines="2"
                android:minLines="1"
                android:text=""
                android:textColor="@color/text_dark"
                android:textColorHint="@color/colorHint"
                app:autoSizeMaxTextSize="18sp"
                app:autoSizeMinTextSize="12dp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toStartOf="@+id/clearImageViewW"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <ProgressBar
                android:id="@+id/warehouseProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:indeterminate="true"
                android:indeterminateTint="@color/firebrick"
                android:progressTint="@color/assetControl"
                app:layout_constraintBottom_toBottomOf="@+id/warehouse"
                app:layout_constraintEnd_toEndOf="@+id/warehouse"
                app:layout_constraintStart_toStartOf="@+id/warehouse" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buttonPanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/selectButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/rounded_corner_button_seagreen"
                android:clickable="true"
                android:focusable="true"
                android:stateListAnimator="@null"
                android:text="@string/accept"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scanButton" />

            <Button
                android:id="@+id/scanButton"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/rounded_corner_button_0b4f6c"
                android:clickable="true"
                android:focusable="true"
                android:stateListAnimator="@null"
                android:text="@string/read_barcode"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>