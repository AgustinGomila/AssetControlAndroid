<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.DEFAULT_SCOPED_STORAGE" />
    <uses-permission android:name="android.permission.FORCE_ENABLE_SCOPED_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Honeywell Broadcast Permission -->
    <uses-permission android:name="com.honeywell.decode.permission.DECODE" />

    <!-- Necesarios para actualizar la app programÃ¡ticamente -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <!-- <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE " /> -->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <permission android:name="android.permission.QUERY_ALL_PACKAGES" />

    <queries>
        <intent>
            <action android:name="android.intent.action.SEND" />
        </intent>
    </queries>

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.nfc"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.bluetooth"
        android:required="false" />

    <application
        android:name="com.dacosys.assetControl.utils.Statics$AssetControl"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AssetControlTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="n">

        <!-- HONEYWELL Native support -->
        <uses-library
            android:name="com.honeywell"
            android:required="false" />

        <!-- HONEYWELL Receiver -->
        <receiver
            android:name=".utils.scanners.honeywell.HoneywellBroadcastReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.dacosys.assetControl.intent.action.BARCODE" />
            </intent-filter>
        </receiver>
        <!-- END HONEYWELL -->

        <!-- ZEBRA Receiver -->
        <receiver
            android:name=".utils.scanners.zebra.ZebraBroadcastReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <!-- Actions to be handled should be registered here -->
                <action android:name="com.zebra.datacapture1.ACTION" />
                <action android:name="com.symbol.datawedge.api.NOTIFICATION_ACTION" />
                <action android:name="com.symbol.datawedge.api.RESULT_ACTION" />
            </intent-filter>
        </receiver>
        <!-- END ZEBRA -->

        <!-- Para descargar y actualizar la app -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity
            android:name=".views.main.HomeActivity"
            android:exported="true"
            android:theme="@style/Theme.App.SplashScreen"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.main.LoginActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_login"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".views.main.SettingsActivity"
            android:label="@string/title_activity_settings">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.main.HomeActivity" />
        </activity>
        <activity
            android:name=".views.codeCheck.CodeCheckActivity"
            android:exported="false"
            android:label="@string/code_read"
            android:windowSoftInputMode="adjustResize">
            <!-- NFC Tech Filter -->
            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data
                android:name="android.nfc.action.TECH_DISCOVERED"
                android:resource="@xml/nfc_tech_filter" />
        </activity>
        <activity android:name=".views.reviews.activities.AssetReviewSelectActivity" />
        <activity
            android:name=".views.reviews.activities.AssetReviewContentActivity"
            android:exported="false"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".views.assets.asset.activities.AssetPrintLabelActivity"
            android:exported="false" />
        <activity android:name=".views.reviews.activities.AssetReviewContentConfirmActivity" />
        <activity
            android:name=".views.assets.asset.activities.AssetCRUDActivity"
            android:exported="false" />
        <activity
            android:name=".views.movements.activities.WarehouseMovementContentActivity"
            android:exported="false" />
        <activity android:name=".views.movements.activities.WarehouseMovementContentConfirmActivity" />
        <activity
            android:name=".views.commons.activities.ObservationsActivity"
            android:exported="false" />
        <activity android:name="com.dacosys.assetControl.views.locations.warehouseArea.activities.WarehouseAreaDetailActivity" />
        <activity android:name=".views.routes.activities.RouteSelectActivity" />
        <activity
            android:name=".views.routes.activities.RouteProcessContentActivity"
            android:exported="false"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".views.routes.activities.DccActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".views.routes.activities.DataCollectionRuleSelectActivity" />
        <activity android:name=".views.routes.activities.DataCollectionRuleTargetActivity" />
        <activity
            android:name="com.dacosys.assetControl.views.locations.warehouseArea.activities.WarehouseAreaCRUDActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".views.commons.activities.CRUDActivity" />
        <activity android:name=".views.print.activities.PrintLabelActivity" />
        <activity
            android:name="com.dacosys.assetControl.views.locations.warehouse.activities.WarehouseCRUDActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".views.assets.itemCategory.activities.ItemCategoryCRUDActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".views.assets.assetManteinance.activities.AssetManteinanceSelectActivity" />
        <activity android:name=".views.assets.assetManteinance.activities.AssetManteinanceConditionActivity" />
        <activity android:name=".views.assets.assetManteinance.activities.AssetManteinanceStatusActivity" />
        <activity
            android:name=".views.sync.activities.SyncActivity"
            android:configChanges="keyboardHidden" />
        <activity android:name=".views.commons.snackbar.MakeText" />
        <activity android:name=".views.main.InitConfigActivity" />
        <activity
            android:name=".views.locations.locationSelect.LocationSelectActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:excludeFromRecents="true"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Translucent"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".views.assets.itemCategory.activities.ItemCategorySelectActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:excludeFromRecents="true"
            android:theme="@style/Theme.AppCompat.Translucent"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".views.assets.asset.activities.AssetDetailActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:excludeFromRecents="true"
            android:theme="@style/Theme.AppCompat.Translucent"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".views.assets.asset.activities.CodeSelectDialogActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:excludeFromRecents="true"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Translucent"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".views.routes.activities.RouteSelectDialogActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:excludeFromRecents="true"
            android:theme="@style/Theme.AppCompat.Translucent"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".views.locations.warehouseArea.activities.WarehouseAreaPrintLabelActivity"
            android:exported="false" />
        <activity
            android:name=".views.print.activities.TemplateSelectDialogActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:excludeFromRecents="true"
            android:theme="@style/Theme.AppCompat.Translucent"
            android:windowSoftInputMode="adjustResize" />

        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="barcode" />

        <property
            android:name="android.content.MEDIA_CAPABILITIES"
            android:resource="@xml/media_capabilities" />
    </application>
</manifest>