<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:dropDownHeight="200dp"
            android:ellipsize="end"
            android:freezesText="true"
            android:hint="@string/search_by_area"
            android:lines="1"
            android:maxLines="1"
            android:paddingStart="4dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="4dp"
            android:text=""
            android:textSize="18sp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/warehouseTextView"
            app:layout_constraintEnd_toStartOf="@+id/descriptionClearImageView"
            app:layout_constraintStart_toEndOf="@+id/descriptionSearchImageView"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/descriptionSearchImageView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:alpha="0.5"
            android:contentDescription="@string/search"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/descriptionTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/descriptionTextView"
            app:srcCompat="@drawable/ic_search_black"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/descriptionClearImageView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="2dp"
            android:alpha="0.5"
            android:contentDescription="@string/clear"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/descriptionTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/descriptionTextView"
            app:srcCompat="@drawable/ic_close_black"/>

    <TextView
            android:id="@+id/warehouseTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:dropDownHeight="200dp"
            android:ellipsize="end"
            android:freezesText="true"
            android:hint="@string/search_by_warehouse"
            android:lines="1"
            android:maxLines="1"
            android:paddingStart="4dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="4dp"
            android:text=""
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/onlyActiveLayout"
            app:layout_constraintEnd_toStartOf="@+id/warehouseClearImageView"
            app:layout_constraintStart_toEndOf="@+id/warehouseSearchImageView"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/warehouseClearImageView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="2dp"
            android:alpha="0.5"
            android:contentDescription="@string/clear"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/warehouseTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/warehouseTextView"
            app:srcCompat="@drawable/ic_close_black"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/warehouseSearchImageView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:alpha="0.5"
            android:contentDescription="@string/search"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/warehouseTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/warehouseTextView"
            app:srcCompat="@drawable/ic_search_black"/>

    <LinearLayout
            android:id="@+id/onlyActiveLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/onlyActiveSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/only_active"
                android:textSize="18sp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>