<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/asset_detail"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:clickable="true"
                                                   android:focusable="true"
                                                   android:orientation="vertical"
                                                   tools:context="com.example.assetControl.ui.activities.asset.AssetDetailActivity"
                                                   tools:layout_editor_absoluteX="0dp"
                                                   tools:layout_editor_absoluteY="81dp">

    <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/layout_background_dialog"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="@string/asset_information"
                android:textColor="@color/assetControl"
                android:textSize="16sp"/>

        <FrameLayout
                android:id="@+id/imageControlLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp">

            <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/imageControlFragment"
                    android:name="com.dacosys.imageControl.ui.fragments.ImageControlButtonsFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout="@layout/image_control_button_panel_fragment"/>
        </FrameLayout>

        <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center_vertical"
                        android:text="@string/code"
                        android:textColor="@color/assetControlDark"
                        android:textSize="12sp"/>

                <TextView
                        android:id="@+id/codeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:minLines="1"
                        android:text="@string/without_code"
                        android:textColor="@color/text_dark"
                        android:textSize="18sp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center_vertical"
                        android:text="@string/description"
                        android:textColor="@color/assetControlDark"
                        android:textSize="12sp"/>

                <TextView
                        android:id="@+id/descriptionTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="6dp"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:minLines="1"
                        android:text="@string/without_description"
                        android:textColor="@color/text_dark"
                        android:textSize="18sp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center_vertical"
                        android:text="@string/ean"
                        android:textColor="@color/assetControlDark"
                        android:textSize="12sp"/>

                <TextView
                        android:id="@+id/eanTextView"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_marginStart="6sp"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:minLines="1"
                        android:text="@string/without_ean"
                        android:textColor="@color/text_dark"
                        android:textSize="18sp"/>

                <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:layout_marginStart="6dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center_vertical"
                        android:text="@string/category"
                        android:textColor="@color/assetControlDark"
                        android:textSize="12sp"/>

                <TextView
                        android:id="@+id/itemCategoryTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="6dp"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:minLines="1"
                        android:text="@string/without_category"
                        android:textColor="@color/text_dark"
                        android:textSize="18sp"/>

                <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:layout_marginStart="6dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center_vertical"
                        android:text="@string/current_location"
                        android:textColor="@color/assetControlDark"
                        android:textSize="12sp"/>

                <TextView
                        android:id="@+id/warehouseTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="6dp"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:minLines="1"
                        android:text="@string/without_current_warehouse"
                        android:textColor="@color/text_dark"
                        android:textSize="18sp"/>

                <TextView
                        android:id="@+id/warehouseAreaTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="6dp"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:minLines="1"
                        android:text="@string/sin_rea_actual"
                        android:textColor="@color/text_dark"
                        android:textSize="18sp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:layout_marginStart="6dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center_vertical"
                        android:text="@string/original_location"
                        android:textColor="@color/assetControlDark"
                        android:textSize="12sp"/>

                <TextView
                        android:id="@+id/origWarehouseTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="6dp"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:minLines="1"
                        android:text="@string/without_original_warehouse"
                        android:textColor="@color/text_dark"
                        android:textSize="18sp"/>

                <TextView
                        android:id="@+id/origWarehouseAreaTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="6dp"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:minLines="1"
                        android:text="@string/sin_rea_original"
                        android:textColor="@color/text_dark"
                        android:textSize="18sp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:layout_marginStart="6dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center_vertical"
                        android:text="@string/status"
                        android:textColor="@color/assetControlDark"
                        android:textSize="12sp"/>

                <TextView
                        android:id="@+id/assetStatusTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="6dp"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:minLines="1"
                        android:text="@string/without_status"
                        android:textColor="@color/text_dark"
                        android:textSize="18sp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:layout_marginStart="6dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center_vertical"
                        android:text="@string/manufacturer"
                        android:textColor="@color/assetControlDark"
                        android:textSize="12sp"/>

                <TextView
                        android:id="@+id/manufacturerTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="6dp"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:minLines="1"
                        android:text="@string/without_manufacturer"
                        android:textColor="@color/text_dark"
                        android:textSize="18sp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:layout_marginStart="6dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center_vertical"
                        android:text="@string/serial_number"
                        android:textColor="@color/assetControlDark"
                        android:textSize="12sp"/>

                <TextView
                        android:id="@+id/serialNumberTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="6dp"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:minLines="1"
                        android:text="@string/without_serial_number"
                        android:textColor="@color/text_dark"
                        android:textSize="18sp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:layout_marginStart="6dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center_vertical"
                        android:text="@string/model"
                        android:textColor="@color/assetControlDark"
                        android:textSize="12sp"/>

                <TextView
                        android:id="@+id/modelTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="6dp"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:minLines="1"
                        android:text="@string/without_model"
                        android:textColor="@color/text_dark"
                        android:textSize="18sp"/>

                <androidx.constraintlayout.widget.Guideline
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.35"/>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>