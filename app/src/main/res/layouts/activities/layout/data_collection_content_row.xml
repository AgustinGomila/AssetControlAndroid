<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:minHeight="0dp"
                                                   android:theme="@style/Theme.AppCompat.Light"
                                                   tools:layout_editor_absoluteX="0dp"
                                                   tools:layout_editor_absoluteY="81dp">

    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="16sp"
            android:layout_marginBottom="16sp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toStartOf="@+id/imageConstraintLayout"
            app:layout_constraintStart_toStartOf="@+id/generalDataConstraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/generalDataConstraintLayout"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/checkBoxConstraintLayout"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:visibility="gone">

        <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center_vertical"
                android:longClickable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/generalDataConstraintLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/imageConstraintLayout"
            app:layout_constraintStart_toEndOf="@+id/checkBoxConstraintLayout"
            app:layout_constraintTop_toTopOf="parent">

        <View
                android:id="@+id/dividerVert2"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintStart_toStartOf="@+id/guidelineBottom"
                app:layout_constraintEnd_toStartOf="@+id/guidelineBottom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dividerInternal4"/>

        <CheckedTextView
                android:id="@+id/dateTextView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:lines="2"
                android:fontFamily="sans-serif-condensed-light"
                android:text="@string/fantasy_date"
                android:textAlignment="viewEnd"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/guidelineTop"
                android:layout_marginStart="1dp" android:layout_marginTop="1dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginBottom="1dp" app:layout_constraintBottom_toTopOf="@+id/dividerInternal4"/>
        <View
                android:id="@+id/dividerVert"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintBottom_toTopOf="@+id/dividerInternal4"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/guidelineTop"
                app:layout_constraintEnd_toStartOf="@+id/guidelineTop"/>

        <View
                android:id="@+id/dividerInternal4"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ruleTextView" android:layout_marginTop="8dp"/>

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineBottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.4"/>

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.6"/>

        <com.example.assetControl.ui.common.views.custom.AutoResizeTextView
                android:id="@+id/compositionAutoSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:maxLines="2"
                android:minLines="1"
                android:text="@string/attribute_composition"
                android:textSize="12sp"
                app:autoSizeMaxTextSize="14sp"
                app:autoSizeMinTextSize="12dp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                app:fontFamily="sans-serif-condensed" app:layout_constraintTop_toTopOf="@+id/valueAutoSize"
                app:layout_constraintBottom_toBottomOf="@+id/valueAutoSize"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toStartOf="@+id/dividerVert2" android:layout_marginEnd="2dp"/>

        <com.example.assetControl.ui.common.views.custom.AutoResizeTextView
                android:id="@+id/valueAutoSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="2"
                android:minLines="1"
                android:text="@string/value"
                android:textSize="24sp"
                app:autoSizeMaxTextSize="48sp"
                app:autoSizeMinTextSize="18dp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintTop_toBottomOf="@+id/dividerInternal4"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="@+id/guidelineBottom"
                android:textAlignment="gravity"
                app:fontFamily="sans-serif-condensed-medium" android:layout_marginEnd="8dp"/>

        <com.example.assetControl.ui.common.views.custom.AutoResizeTextView
                android:id="@+id/ruleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:gravity="start"
                android:maxLines="2"
                android:minLines="1"
                android:text="@string/rule_description"
                android:textSize="16sp"
                app:autoSizeMaxTextSize="24sp"
                app:autoSizeMinTextSize="12dp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toStartOf="@+id/guidelineTop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="1dp"
                android:textAlignment="gravity" android:textColor="@color/triad4"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp" android:id="@+id/imageConstraintLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone" app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/layout_semitransparent">

        <ProgressBar
                android:id="@+id/progressBar"
                style="@android:style/Widget.DeviceDefault.ProgressBar"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintEnd_toEndOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                android:visibility="gone"
        />
        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/item_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="invisible" android:padding="4dp" app:srcCompat="@drawable/ic_show_image"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>