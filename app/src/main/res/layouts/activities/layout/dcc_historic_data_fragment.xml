<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:layout_marginStart="2sp"
                                                   android:layout_marginTop="2sp"
                                                   android:layout_marginEnd="2sp"
                                                   android:layout_marginBottom="2sp">

    <TextView
            android:id="@+id/titleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/rounded_corner_button_808f87"
            android:gravity="center_horizontal"
            android:text="@string/previous_records"
            android:textColor="@color/whitesmoke"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/historicValuesLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleTextView">

        <TextView
                android:id="@+id/noPreviousDataTextView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/layout_thin_border"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/no_previous_data"
                android:textAlignment="gravity"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/oldDateTextView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/date"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/historicValuesGuideline" android:elegantTextHeight="true"
                android:lines="1" android:maxLines="1" android:minLines="1"/>

        <TextView
                android:id="@+id/oldValueTextView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:fontFamily="sans-serif-black"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/value"
                app:layout_constraintEnd_toStartOf="@+id/historicValuesGuideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/oldDateTextView4" android:elegantTextHeight="true"
                android:lines="1" android:maxLines="1" android:minLines="1"/>

        <TextView
                android:id="@+id/oldDateTextView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/date"
                app:layout_constraintBottom_toTopOf="@+id/oldDateTextView4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/historicValuesGuideline" android:elegantTextHeight="true"
                android:lines="1" android:maxLines="1" android:minLines="1"/>

        <TextView
                android:id="@+id/oldValueTextView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:fontFamily="sans-serif-black"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/value"
                app:layout_constraintEnd_toStartOf="@+id/historicValuesGuideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/oldDateTextView3" android:elegantTextHeight="true"
                android:lines="1" android:maxLines="1" android:minLines="1"/>

        <TextView
                android:id="@+id/oldDateTextView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/date"
                app:layout_constraintBottom_toTopOf="@+id/oldDateTextView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/oldValueTextView2"
                app:layout_constraintStart_toStartOf="@+id/historicValuesGuideline" android:elegantTextHeight="true"
                android:lines="1" android:maxLines="1" android:minLines="1"/>

        <TextView
                android:id="@+id/oldValueTextView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:fontFamily="sans-serif-black"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/value"
                app:layout_constraintEnd_toStartOf="@+id/historicValuesGuideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/oldDateTextView2" android:elegantTextHeight="true"
                android:lines="1" android:maxLines="1" android:minLines="1"/>

        <TextView
                android:id="@+id/oldDateTextView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/date"
                app:layout_constraintBottom_toTopOf="@+id/oldDateTextView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/historicValuesGuideline" android:elegantTextHeight="true"
                android:lines="1" android:maxLines="1" android:minLines="1"/>

        <TextView
                android:id="@+id/oldValueTextView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:fontFamily="sans-serif-black"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/value"
                app:layout_constraintEnd_toStartOf="@+id/oldDateTextView1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/oldDateTextView1" android:elegantTextHeight="true"
                android:lines="1" android:maxLines="1" android:minLines="1"/>

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/historicValuesGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.4"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>